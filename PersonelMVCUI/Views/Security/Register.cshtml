@model PersonelMVCUI.Models.EntityFramework.Kullanicilar
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<style>
    body {
        margin: 0;
        padding: 0;
        background-color: #17a2b8;
        height: 100vh;
    }

    #login-box {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translateX(-50%) translateY(-50%);
        max-width: 600px;
        height: 320px;
        border: 1px solid #9C9C9C;
        background-color: #EAEAEA;
    }

        #login-box #login-form {
            padding: 20px;
        }

            #login-box #login-form #register-link {
                margin-top: -85px;
            }
</style>

<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">PersonelYonetim sistemi</a>
        </div>
        <ul class="nav navbar-nav">
            <li><a href="/Security">Login</a></li>
            <li><a href="/Security/Register">Register</a></li>


        </ul>
    </div>
</nav>




@using (Html.BeginForm("Register", "Security", FormMethod.Post))
{
    <div id="login-box" class="col-md-12">

        <h3 class="text-center text-info">Register</h3>
        <div class="form-group">
            @Html.LabelFor(m => m.Ad) <br>
            @Html.TextBoxFor(m => m.Ad, new { @class = "form-control", placeholder = "Kullanici Adi" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Sifre)<br>
            @Html.TextBoxFor(m => m.Sifre, new { @class = "form-control", placeholder = "Password" })
        </div>
        <div class="form-group">
            <label for="remember-me" class="text-info"><span>Remember me</span> <span><input id="remember-me" name="remember-me" type="checkbox"></span></label><br>
            <input type="submit" name="Register" class="btn btn-info btn-md" value="submit">
        </div>


    </div>
}

